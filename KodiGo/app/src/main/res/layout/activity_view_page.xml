<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_view_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ph.edu.dlsu.mobapde.chan_david_roque.kodigo.ViewPageActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout android:id="@+id/my_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewTitlePage"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:id="@+id/viewPageText"
                    android:layout_below="@id/viewTitlePage"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTitlePage"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:selectAllOnFocus="true"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:id="@+id/editPageText"
                    android:layout_below="@id/editTitlePage"
                    android:backgroundTint="@android:color/transparent"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <HorizontalScrollView
                    android:id="@+id/custom_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

        </FrameLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <LinearLayout android:id="@+id/my_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorToolbar"
                    android:visibility="invisible"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_format_bold_white_24px"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_format_italic_white_24px"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_format_underlined_white_24px"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_format_color_text_white_24px"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_photo_camera_white_24px"
                        android:layout_margin="2dp"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_photo_library_white_24px"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_comment_white_24px"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"/>
                    <!--<ImageView-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_margin="2dp"-->
                        <!--android:src="@drawable/ic_format_align_left_white_24px"-->
                        <!--android:scaleType="fitCenter"/>-->
                    <!--<ImageView-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:src="@drawable/ic_format_align_justify_white_24px"-->
                        <!--android:layout_margin="2dp"-->
                        <!--android:scaleType="fitCenter"/>-->
                    <!--<ImageView-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_margin="2dp"-->
                        <!--android:src="@drawable/ic_format_list_bulleted_white_24px"-->
                        <!--android:scaleType="fitCenter"/>-->
                    <!--<ImageView-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:src="@drawable/ic_format_list_numbered_white_24px"-->
                        <!--android:layout_margin="2dp"-->
                        <!--android:scaleType="fitCenter"/>-->

                </LinearLayout>
            </HorizontalScrollView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_edit_white_24px"
        app:fabSize="normal"
        android:id="@+id/toggleEditButton"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
