<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ph.edu.dlsu.mobapde.chan_david_roque.kodigo" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNotebookActivity" />
        <activity android:name=".ViewNotebookActivity" />
        <activity android:name=".ColorpickerActivity" />
        <activity android:name=".EditNotebookActivity" />
        <activity
            android:name=".ViewPageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ClickableTitleTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ViewPageSlideActivity"
            android:label="@string/title_activity_view_page_slide"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>